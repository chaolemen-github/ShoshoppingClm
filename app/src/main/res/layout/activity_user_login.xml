<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    tools:context="com.chaolemen.shoppingclm.user.LoginUserActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_login"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/common_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_login_finish"
        app:layout_constraintTop_toTopOf="@id/toolbar_login"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/umeng_socialize_back_icon"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30" />

    <TextView
        android:id="@+id/tv_login_register"
        android:text="注册"
        android:textColor="@color/common_white"
        app:layout_constraintTop_toTopOf="@id/toolbar_login"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_login"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear_login"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_login"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/common_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_login_user"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/toolbar_login"
            android:drawableLeft="@mipmap/icon_user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:background="@color/cardview_shadow_start_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/et_login_pass"
            app:layout_constraintTop_toBottomOf="@id/et_login_user"
            android:drawableLeft="@mipmap/icon_pwd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:text="登录"
        android:textColor="@color/common_white"
        app:layout_constraintTop_toBottomOf="@id/linear_login"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/common_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login_slip"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintRight_toRightOf="parent"
        android:text="忘记密码？"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/common_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
