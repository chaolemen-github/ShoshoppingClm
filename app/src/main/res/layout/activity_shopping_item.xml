<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rb_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_shopping_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_shopping_img" />

    <ImageView
        android:id="@+id/iv_shopping_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/rb_shopping"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shopping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/tv_shopping_text"
        app:layout_constraintLeft_toRightOf="@id/iv_shopping_img"
        app:layout_constraintTop_toTopOf="@id/iv_shopping_img" />

    <TextView
        android:id="@+id/tv_shopping_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_shopping_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_shopping_img"
        app:layout_constraintLeft_toRightOf="@id/iv_shopping_img" />

</android.support.constraint.ConstraintLayout>