<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_msg_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_msg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_msg_login1"
        app:layout_constraintLeft_toRightOf="@id/iv_msg_img"
        app:layout_constraintTop_toTopOf="@id/iv_msg_img" />

    <TextView
        android:id="@+id/tv_msg_login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_login"
        app:layout_constraintLeft_toRightOf="@id/iv_msg_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_msg_img" />

    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/iv_msg_img" />

</android.support.constraint.ConstraintLayout>