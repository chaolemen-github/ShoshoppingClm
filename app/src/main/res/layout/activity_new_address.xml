<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chaolemen.shoppingclm.cart.NewAddressActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_newAddress"
        android:background="@color/common_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/common_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_newAddress_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@mipmap/icon_back"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_newAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_newAddress" />

    <TextView
        android:id="@+id/tv_newAddress_preserve"
        android:text="保存"
        app:layout_constraintTop_toTopOf="@id/toolbar_newAddress"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_newAddress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/common_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_address"
        app:layout_constraintTop_toBottomOf="@id/toolbar_newAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:background="@color/common_blue"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/common_white"
        android:layout_height="wrap_content"
        android:text="选择地址"
        android:layout_centerInParent="true" />


</android.support.constraint.ConstraintLayout>
