<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chaolemen.shoppingclm.user.PersonalActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="@id/iv_personal_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_personal_img" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_personal_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/icon_default_user"
            app:layout_constraintRight_toLeftOf="@id/iv_personal_"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_personal_"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="@id/iv_personal_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_personal_img" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toBottomOf="@id/constraint_personal" />


</android.support.constraint.ConstraintLayout>
